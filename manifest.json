{
  "name": "BambooHR Session Extender",
  "manifest_version": 3,
  "version": "1.0",
  "description": "Refreshes BambooHR sessions in the background",
  "action": {
    "default_popup": "about.html"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.bamboohr.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.bamboohr.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}