{
  "name": "BambooHR Session Extender",
  "manifest_version": 3,
  "version": "1.0",
  "description": "Refreshes BambooHR sessions in the background",
  "action": {
    "default_popup": "about.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://*.bamboohr.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://section6.bamboohr.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}